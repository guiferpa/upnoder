{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "~domain/*": ["./domain/*"],
      "~handler/*": ["./handler/*"],
      "~components/*": ["./components/*"],
      "~logic/*": ["./logic/*"],
      "~wire/*": ["./wire/*"],
      "~config/*": ["./config/*"]
    },
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
